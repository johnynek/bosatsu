package StrConcatExample

x = "hello"
y = "atticus"
z = "mahina"

def ident(value): value

def m2s(m):
    match m:
        case "mahina": "sarah"
        case _: m

res0 = "${x} ${y} and ${z}" matches "hello atticus and mahina"

res1 = "${ident(x)} ${y} and ${m2s(z)}" matches "hello atticus and sarah"

res2 = "${x}" matches "hello"

res3 = match "${x} ${y} and ${z}":
    case "hello ${rest}": rest matches "atticus${_}mahina"
    case _: False

res4 = match "${x} ${y} and ${z}":
    case "${left}atticus${right}":
        (left, right) matches ("hello ", " and mahina")
    case _: False

test = TestSuite("interpolation", [
    Assertion(res0, "res0"),
    Assertion(res1, "res1"),
    Assertion(res2, "res2"),
    Assertion(res3, "res3"),
    Assertion(res4, "res4"),
])
